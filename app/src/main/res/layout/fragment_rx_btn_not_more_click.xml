<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.linjiawei.mytestdemo.rxandroid.fragment.RxBtnNotMoreClickFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/hintTextStyle"
        android:text="防止按钮点击时抖动"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="3dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/notFirstMoreBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="连续点击按钮(点击后3s内不能再点击)"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="3dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/notLastMoreBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="点击按钮(延迟3s执行点击事件)"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
