<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.linjiawei.mytestdemo.rxandroid.fragment.function.RxFunctionExerciseActivity">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/rxOperatorTitle"
        style="@style/hintTextStyle"
        android:text="操作符"
        android:textSize="26sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/cardItemStyle"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/operatorDescribeText"
                style="@style/cardButtonStyle"
                android:paddingBottom="10dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="10dp"
                android:text="功能描述"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/cardItemStyle"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <Button
                android:id="@+id/describeBtn"
                style="@style/cardButtonStyle"
                android:text="测试按钮"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>